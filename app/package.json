{
  "name": "@claude-wrapper/app",
  "version": "1.0.0",
  "description": "Core application for Claude Wrapper - OpenAI-compatible API wrapper for Claude Code CLI",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "build": "tsc > build.log 2>&1",
    "build:clean": "rm -rf dist && npm run build",
    "build:watch": "tsc --watch",
    "start": "node dist/src/index.js",
    "start:cli": "node dist/src/cli.js",
    "dev": "tsx watch src/index.ts",
    "dev:cli": "tsx watch src/cli.ts",
    "test": "jest --config tests/jest.config.js",
    "test:watch": "jest --config tests/jest.config.js --watch",
    "test:unit": "jest --config tests/jest.unit.config.js",
    "test:integration": "jest --config tests/jest.integration.config.js",
    "test:coverage": "jest --config tests/jest.unit.config.js --coverage",
    "test:performance": "node performance-test.js",
    "test:stress": "node stress-test.js",
    "test:phase3a": "npm run build && npm run test:performance",
    "test:phase3a:full": "npm run build && npm run test:performance && npm run test:stress",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "test:integration:debug": "jest --config tests/jest.integration.diagnostic.config.js",
    "test:integration:isolated": "jest --config tests/jest.integration.config.js --runInBand --verbose",
    "test:singleton:validation": "node tests/scripts/validate-singletons.js",
    "test:response:schema": "node tests/scripts/validate-response-schemas.js",
    "test:response:compare": "node tests/scripts/compare-response-formats.js",
    "test:contract:validation": "node tests/scripts/validate-api-contracts.js",
    "audit:singletons": "node tests/scripts/audit-singleton-usage.js",
    "debug:error-classification": "node tests/scripts/debug-error-classification.js",
    "debug:statistics-tracking": "node tests/scripts/debug-statistics-tracking.js",
    "debug:sanitization-flow": "node tests/scripts/debug-sanitization-flow.js",
    "debug:json-parse-errors": "node tests/scripts/debug-json-parse-errors.js",
    "debug:monitoring-system": "node tests/scripts/debug-monitoring-system.js",
    "debug:middleware-stack": "node tests/scripts/debug-middleware-stack.js",
    "test:security:sanitization": "node tests/scripts/test-security-sanitization.js",
    "test:middleware:json-parsing": "node tests/scripts/test-middleware-json-parsing.js",
    "test:environment:compare": "node tests/scripts/test-environment-compare.js",
    "test:health:check": "node tests/scripts/health-check.js full",
    "test:health:daily": "node tests/scripts/health-check.js daily",
    "test:integration:full": "npm run test:integration:debug && npm test -- --testPathPattern='integration'",
    "test:validation:weekly": "node tests/scripts/health-check.js full",
    "test:performance:trend": "node tests/scripts/performance-trend-analysis.js",
    "test:ci-simulation": "NODE_ENV=ci npm run test:integration:debug",
    "test:performance:integration": "jest --config tests/jest.integration.config.js --detectOpenHandles --runInBand --forceExit"
  },
  "keywords": [
    "claude",
    "openai",
    "api",
    "wrapper",
    "typescript",
    "express"
  ],
  "author": "Claude Code Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.43",
    "async-mutex": "^0.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "winston": "^3.8.0",
    "zod": "^3.25.71"
  },
  "devDependencies": {
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.0.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "jest-junit": "^16.0.0",
    "supertest": "^7.1.1",
    "ts-jest": "^29.0.0",
    "tsx": "^4.19.0",
    "typescript": "^4.9.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}