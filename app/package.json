{
  "name": "claude-wrapper",
  "version": "1.0.0",
  "description": "OpenAI-compatible API wrapper for Claude Code CLI",
  "main": "dist/index.js",
  "bin": {
    "claude-wrapper": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --config tests/jest.unit.config.js --coverage",
    "test:performance": "node performance-test.js",
    "test:stress": "node stress-test.js",
    "test:phase3a": "npm run build && npm run test:performance",
    "test:phase3a:full": "npm run build && npm run test:performance && npm run test:stress",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "claude",
    "openai",
    "api",
    "wrapper",
    "typescript"
  ],
  "author": "Claude Code Team",
  "license": "MIT",
  "dependencies": {
    "async-mutex": "^0.4.0",
    "commander": "^9.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "readline-sync": "^1.4.10",
    "winston": "^3.8.0",
    "zod": "^3.25.71"
  },
  "devDependencies": {
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.0.0",
    "@types/readline-sync": "^1.4.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "jest-junit": "^16.0.0",
    "supertest": "^7.1.1",
    "ts-jest": "^29.0.0",
    "tsx": "^4.19.0",
    "typescript": "^4.9.0"
  },
  "optionalDependencies": {
    "@anthropic-ai/claude-code": "^1.0.43"
  }
}
