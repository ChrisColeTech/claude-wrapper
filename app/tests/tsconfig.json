{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false,
    "types": ["jest"],
    "paths": {
      "@/*": ["../src/*"],
      "@/models/*": ["../src/models/*"],
      "@/auth/*": ["../src/auth/*"],
      "@/utils/*": ["../src/utils/*"]
    }
  },
  "include": ["**/*.ts"]
}
